<p id="notice"><%= notice %></p>

<h2><%= @post.title %><h2>
<h3><%= @post.created_at.strftime("%d %b %Y") %></h3>

<p><%= @post.body %></p>

<h3>Comments</h3>

<% @post.comments.each do |comment| %>
  <h4><%= comment.name %></h4>
  <p><%= comment.body %></p>
<% end %>

<%= link_to 'Add Comment', new_comment_path(@post)%><%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', root_path %>
