<p id="notice"><%= notice %></p>

<div class="title">
  <h1><%= @post.title %><h2>
  <h2><%= @post.created_at.strftime("%d %b %Y") %></h2>
</div>

<div class="body">
  <p><%= @post.body %></p>
</div>

<div class="comments">
<h3>Comments</h3>
  <% @post.comments.each do |comment| %>
  <div class="comment">
    <h4><%= comment.name %></h4>
    <p><%= comment.body %></p>
  </div>
  <% end %>

  <%= render :partial => "comments/form", :comment => @post.comments.new %>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', root_path %>
